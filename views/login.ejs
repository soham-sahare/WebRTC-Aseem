<img src="../ab.JPG" width="200" height="50" style="justify-content: center;"><br><br>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3" style="color:#4d4144;"><i class="fas fa-sign-in-alt"></i> Welcome To Aseem !</h1>
      <br>
      <h1 class="text-center mb-3" style="color:#9e3a55;"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-danger btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a style="color: #9e3a55;" href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>
