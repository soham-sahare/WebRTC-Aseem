
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
        
      
      <h1 class="text-center mb-3" style="color:#9e3a55;"><i class="fas fa-sign-in-alt"></i><%= event.title %></h1>
      
      <form action="/poll/vote/<%= event.id %>" method="POST">
        <div class="form-group">
            <label for="title"></label>
            
          <div class="form-group">
            <label for="option1"><%= event.option1 %></label>
            <input type="radio" name="userchosen" id="op1" value="op1">
          </div>
          <div class="form-group">
              <label for="option2"><%= event.option2 %></label>
              <input type="radio" name="userchosen" id="op2" value="op2">
            </div>
            <div class="form-group">
              <label for="option3"><%= event.option3 %></label>
              <input type="radio" name="userchosen" id="op3" value="op3">
            </div>
            <div class="form-group">
              <label for="option4"><%= event.option4 %></label>
              <input type="radio" name="userchosen" id="op4" value="op4">
            </div>
            
            <%if (myID.userID != event.userID && allowed == "yes") { %>

              <button type="submit" class="btn btn-danger btn-block">Submit</button>
              <% } %>
              <%if (allowed == "no") { %>
                <p>Response Already Submitted.</p>
                <% } %>
        
        
      </form>
      
    </div>
  </div>
</div>
